#!/bin/bash
set -e

ROOT_DIR=$(cd "$(dirname "$0")"/.. && pwd)

ARCH=${ARCH:-amd64}
SUFFIX=""
[ "${ARCH}" != "amd64" ] && SUFFIX="_${ARCH}"

TAG=${TAG:-v$(date -u +%Y%m%d)}
REPO=${REPO:-longhornio}
IMAGE=${IMAGE:-${REPO}/longhornctl:${TAG}}

source "${ROOT_DIR}/dapper/version"
cd "${ROOT_DIR}"

if [ ! -e ./bin/longhornctl ]; then
    ./dapper/build
fi

# Copy SPDK scripts from the dapper container
mkdir -p ./spdk
cp -rf /spdk/scripts ./spdk/

# Build image
docker build -t "${IMAGE}" -f package/Dockerfile .
echo Built "${IMAGE}"
# shellcheck disable=SC2086
echo ${IMAGE} > ./bin/latest_image
